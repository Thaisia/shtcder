<h3>New Post</h3>

<%= form_for :post, url: posts_path do |f| %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text%>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.label "Make post public"%>
    <%= f.check_box :public%>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
